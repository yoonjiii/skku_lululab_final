<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lululab_ocr_app.lululab_app.image_crop_app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="사진 선택"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진촬영"
            android:layout_marginLeft="40dp"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="앨범에서 사진 가져오기"
            android:textSize="12dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/choose_lan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="언어 선택"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"/>
        <RadioGroup
            android:id="@+id/radio_lan"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:id="@+id/radio_lan_eng"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="영어"
                android:layout_marginEnd="8dp"/>

            <RadioButton
                android:id="@+id/radio_lan_kor"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:text="한글" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/choose_option"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="옵션 선택"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"/>
        <RadioGroup
            android:id="@+id/radio_option"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">
            <RadioButton
                android:id="@+id/radio_option_1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="화장품 이름"
                android:layout_marginEnd="8dp"/>

            <RadioButton
                android:id="@+id/radio_option_2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:text="화장품 성분표" />
        </RadioGroup>
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과 확인"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#673AB7"
        android:textSize="5sp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item">
    </ListView>

</LinearLayout>








